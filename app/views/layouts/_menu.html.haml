.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      
      = link_to "Saosao", root_path, :class => "brand"
      
      .nav-collapse
        - if session[:screen_name]
          %ul.nav.pull-right
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Welcome, #{session[:screen_name]}
                %b.caret
              %ul.dropdown-menu
                %li= link_to "Sign out", sign_out_path

        = form_tag search_path, :class => "navbar-search pull-right", :method => :get do
          = text_field_tag "search", nil, :class => "search-query", :placeholder => "Search"
